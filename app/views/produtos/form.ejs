<html>
<body>
	<div class="erros">
		<%if(errosValidacao){%>
			<ul>
				<%for(var i=0; i<errosValidacao.length; i++){%>
					<li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
				<%}%>
			</ul>
		<%}%>
	</div>
	<form action="/produtos" method="post">
		<div>
			<label for="titulo">Título</label>
			<input type="text" id="titulo" value="<%=produto.titulo%>" name="titulo" placeholder="coloque o titulo"/>
		</div>
		<div>
			<label for="valor">Valor</label>
			<input type="text" id="valor" value="<%=produto.valor%>" name="valor" placeholder="00.00"/>
		</div>
		<div>
			<label for="descricao">Descrição</label>
			<textarea cols="20" rows="5" id="descricao" name="descricao" placeholder="coloque a descricao">
				<%=produto.descricao%>
			</textarea>
		</div>
		<input type="submit" value="Cadastrar"/>
	</form>
</body>
</html>